<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="path"
            type="java.nio.file.Path" />
    </data>

    <org.codroid.body.widgets.WindowTab xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/window_tab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingHorizontal="@dimen/material_8dp"
        android:paddingVertical="@dimen/material_8dp"
        android:text="@{path.fileName.toString()}"
        android:fontFamily="@font/poppins_regular">

    </org.codroid.body.widgets.WindowTab>
</layout>
