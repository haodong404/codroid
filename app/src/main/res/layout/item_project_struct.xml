<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="item"
            type="org.codroid.editor.ui.FileItem" />
    </data>

    <org.codroid.editor.widgets.ProjectStructureItemView
        android:id="@+id/project_structure_item"
        android:layout_width="match_parent"
        android:background="@color/white"
        app:level="@{item.level}"
        app:title="@{item.name}"
        app:type="@{item.type}"
        app:isExpanded="@{item.isExpanded}"
        app:titleColor="@{item.textColor}"
        android:layout_height="30dp"/>
</layout>